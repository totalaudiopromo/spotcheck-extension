{
  "manifest_version": 3,
  "name": "Spot Check - Spotify Playlist Validator",
  "version": "1.0.0",
  "description": "Instantly validate Spotify playlists. Check followers, track counts, curator legitimacy, and detect bot playlists.",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://api.spotify.com/*",
    "https://open.spotify.com/*",
    "https://spot-checker.totalaudiopromo.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/playlist/*"],
      "js": ["content/spotify-injector.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://open.spotify.com/*"]
    }
  ]
}
